<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AtamiTheme.KeyBoard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.atami.kikurage.atamikeyboard.view.NavBarView
        style="@style/AtamiTheme.NavBar"
        android:nestedScrollingEnabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.atami.kikurage.atamikeyboard.view.StampGridView
            android:id="@+id/stampGrid"
            style="@style/AtamiTheme.StampGrid"
            android:layout_width="0dp"
            android:layout_height="250dp" />

        <com.atami.kikurage.atamikeyboard.view.SideToolBarView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>
</LinearLayout>