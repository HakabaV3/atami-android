<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AtamiTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="AtamiTheme.KeyBoard" parent="AtamiTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorGrey50</item>
    </style>

    <style name="AtamiTheme.TouchTarget" parent="AtamiTheme">
        <item name="android:minWidth">@dimen/minTouchTargetWidth</item>
        <item name="android:minHeight">@dimen/minTouchTargetHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AtamiTheme.Button" parent="AtamiTheme.TouchTarget">
        <item name="android:padding">@dimen/gutter2</item>
        <item name="android:layout_marginLeft">@dimen/gutter2</item>
        <item name="android:layout_marginRight">@dimen/gutter2</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="AtamiTheme.ButtonPrimary" parent="AtamiTheme.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

</resources>
